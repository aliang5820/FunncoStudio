<?xml version="1.0" encoding="utf-8"?>
<com.funnco.funnco.view.layout.CheckableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/tv_item_servicetogether_servicename"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_gravity="left"
        android:layout_centerVertical="true"/>
    <CheckBox
        android:id="@+id/cb_item_servicetogether_ischecked"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:button="@drawable/selector_repeadmode_circle"
        android:padding="10dp"
        android:focusable="false"
        android:clickable="false"
        android:gravity="center_vertical"
        android:layout_gravity="right|center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_hint_gray"
        android:layout_gravity="bottom"/>
</com.funnco.funnco.view.layout.CheckableFrameLayout>