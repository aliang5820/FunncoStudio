<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include
        android:id="@id/llayout_head"
        layout="@layout/layout_activity_header"/>
    <TextView
        android:id="@id/tip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/llayout_head"
        android:gravity="center"
        android:text="@string/str_notification"/>
    <com.funnco.funnco.view.listview.XListView
        android:id="@id/id_listView"
        style="@style/style_common_listview"
        android:layout_below="@id/tip">
    </com.funnco.funnco.view.listview.XListView>
</RelativeLayout>