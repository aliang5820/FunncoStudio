<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/login_login_bg"
    tools:context="com.funnco.funnco.activity.login.LoginActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login_logo_2x"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/llayout_login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_login_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/str_phonenumber"
            style="@style/style_login_et_inner"
            android:inputType="number"
            android:maxLength="20"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/shape_et_inner"/>
        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/str_password"
            style="@style/style_login_et_inner"
            android:layout_marginTop="10dp"
            android:password="true"
            android:maxLength="20"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/shape_et_inner"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_login_lostpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lostpassword"
        android:layout_alignRight="@+id/llayout_login_info"
        android:layout_below="@+id/llayout_login_info"/>
    <LinearLayout
        android:id="@+id/llayout_login_bottom_logintype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_login_newaccount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:background="@android:color/black"
            android:text="@string/regist_new_count"
            android:drawableLeft="@mipmap/login_funnco_icon_2"/>
        <TextView
            android:id="@+id/tv_login_wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:background="@android:color/black"
            android:text="@string/login_by_weicat"
            android:drawableLeft="@mipmap/login_wechat_icon_2"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_login_loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/llayout_login_bottom_logintype"
        android:layout_marginBottom="30dp"
        android:background="@drawable/selector_login_loginbtn"/>

</RelativeLayout>

