<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@id/tip"
        style="@style/style_common_tv_bar"
        android:layout_margin="0dp"
        android:background="@color/color_main_bg"
        android:gravity="center"
        android:text="AAAAA" />

    <com.funnco.funnco.view.switcher.SwipeLayout
        android:id="@+id/swip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@id/id_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/color_white"
                android:background="@color/color_red_2"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_common_width_65"
            android:background="@color/color_translucent">

            <ImageView
                android:id="@id/id_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/common_enter_arrow_2x"
                android:paddingRight="@dimen/dimen_common_10"/>

            <LinearLayout
                android:id="@+id/llayout_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/id_imageview"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@id/id_textview"
                    style="@style/style_layout_width_height_ww"
                    android:textSize="@dimen/font_size_12"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_common_10"
                    android:textColor="@color/color_hint_gray_light"
                    android:visibility="gone"
                    android:text="aaaaaa"/>
                <com.funnco.funnco.view.layout.HandyLinearLayout
                    android:id="@id/id_linearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- android:textColor="@drawable/selector_color_white"-->
                    <CheckBox
                        android:id="@id/id_title_0"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:checked="false"
                        android:padding="0dp"
                        android:text="@string/sunday_3"
                        android:textSize="@dimen/font_size_12" />
                    <CheckBox
                        android:id="@id/id_title_1"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:checked="true"
                        android:padding="0dp"
                        android:text="@string/monday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@id/id_title_2"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:checked="true"
                        android:padding="0dp"
                        android:text="@string/tuesday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@id/id_title_3"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:checked="true"
                        android:padding="0dp"
                        android:text="@string/wednesday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@id/id_title_4"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:padding="0dp"
                        android:text="@string/thursday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@id/id_title_5"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:padding="0dp"
                        android:text="@string/friday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@id/id_title_6"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:padding="0dp"
                        android:text="@string/saturday_3"
                        android:textSize="@dimen/font_size_12" />

                </com.funnco.funnco.view.layout.HandyLinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/llayout_right"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_common_10">

                <TextView
                    android:id="@+id/tv_item_teamservice_servicename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="名字"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_item_teamservice_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="描述"
                    android:textColor="@color/color_hint_gray_light"
                    android:textSize="12sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_common_1"
                android:layout_alignParentBottom="true"
                android:background="@color/color_hint_gray_light"/>
        </RelativeLayout>
    </com.funnco.funnco.view.switcher.SwipeLayout>
</LinearLayout>