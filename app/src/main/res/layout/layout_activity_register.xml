<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/login_login_bg_register"
    tools:context="com.funnco.funnco.activity.login.RegisterActivity">

        <com.funnco.funnco.view.imageview.CircleImageView
            android:id="@+id/iv_register_usericon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_edit_profile_default_2x"/>
        <TextView
            android:id="@+id/tv_register_editstr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_icon_edit"
            android:layout_below="@+id/iv_register_usericon"
            style="@style/style_base"
            android:clickable="true"
            android:onClick="btnClick"
            android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/llayout_register_middle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_register_container_absheight"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_et_inner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:text="@string/name"
            android:textColor="@color/color_hint_gray_light"
            android:paddingLeft="15dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/et_register_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxEms="20"
            android:textSize="14sp"
            android:maxLength="15"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:background="@color/color_translucent"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_et_inner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:text="@string/str_password"
            android:textColor="@color/color_hint_gray_light"
            android:paddingLeft="15dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minEms="6"
            android:maxEms="20"
            android:maxLength="20"
            android:textSize="14sp"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:background="@color/color_translucent"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_et_inner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:text="@string/career"
            android:textColor="@color/color_hint_gray_light"
            android:paddingLeft="15dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/tv_register_career"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="btnClick"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:textSize="14sp"
            android:drawableRight="@mipmap/common_dropdown_arrow_2x"
            android:background="@drawable/shape_et_inner"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:background="@drawable/shape_et_inner">
            <TextView
                android:id="@+id/tv_register_tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:text="@string/str_phonenumber"
                android:textColor="@color/color_hint_gray_light"
                android:paddingLeft="15dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_register_getauthorcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_authcode"
                android:textSize="16sp"
                android:gravity="center"
                android:clickable="true"
                android:onClick="btnClick"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:textColor="@color/color_hint_tangerine"/>
            <EditText
                android:id="@+id/et_register_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/color_hint_gray_light"
                android:inputType="number"
                android:singleLine="true"
                android:maxEms="11"
                android:maxLength="22"
                android:textSize="14sp"
                android:layout_marginTop="0dp"
                android:layout_centerVertical="true"
                android:background="@color/color_translucent"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:layout_toRightOf="@id/tv_register_tv_mobile"
                android:layout_toLeftOf="@id/tv_register_getauthorcode"/>
            </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_et_inner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:text="@string/fillin_authcode"
            android:textColor="@color/color_hint_gray_light"
            android:paddingLeft="15dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/et_register_authcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="true"
            android:singleLine="true"
            android:maxEms="4"
            android:maxLength="6"
            android:textSize="14sp"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:background="@color/color_translucent"/>
</LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
    <TextView
        android:id="@+id/tv_register_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:onClick="btnClick"
        android:background="@drawable/selector_register_submit"/>

    <TextView
        android:id="@+id/tv_register_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:onClick="btnClick"
        android:background="@drawable/selector_register_cancle"
        android:layout_alignBottom="@id/tv_register_register"/>
</RelativeLayout>
    <TextView
        android:id="@+id/tv_register_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
