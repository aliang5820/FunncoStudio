<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_service_tip"
        style="@style/style_common_tv_bar"
        android:layout_margin="0dp"
        android:background="@color/color_main_bg"
        android:gravity="center"
        android:text="AAAAA" />

    <com.funnco.funnco.view.switcher.SwipeLayout
        android:id="@+id/swip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"
            android:gravity="center">

            <TextView
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/color_white"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_common_width_65"
            android:background="@color/color_translucent"
            android:paddingLeft="@dimen/dimen_common_15"
            android:paddingRight="@dimen/dimen_common_10">

            <LinearLayout
                android:id="@+id/llayout_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_item_service_teamicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/common_my_team" />

                <TextView
                    android:id="@+id/tv_item_service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00-12:00" />

                <com.funnco.funnco.view.layout.HandyLinearLayout
                    android:id="@id/id_linearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- android:textColor="@drawable/selector_color_white"-->
                    <CheckBox
                        android:id="@+id/cb_item_service_sun"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:checked="false"
                        android:padding="0dp"
                        android:text="@string/sunday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@+id/cb_item_service_mon"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:checked="true"
                        android:padding="0dp"
                        android:text="@string/monday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@+id/cb_item_service_tue"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:checked="true"
                        android:padding="0dp"
                        android:text="@string/tuesday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@+id/cb_item_service_wed"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:checked="true"
                        android:padding="0dp"
                        android:text="@string/wednesday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@+id/cb_item_service_thu"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:padding="0dp"
                        android:text="@string/thursday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@+id/cb_item_service_fri"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:padding="0dp"
                        android:text="@string/friday_3"
                        android:textSize="@dimen/font_size_12" />

                    <CheckBox
                        android:id="@+id/cb_item_service_sat"
                        style="@style/style_common_cb"
                        android:layout_width="@dimen/dimen_common_15"
                        android:layout_height="@dimen/dimen_common_15"
                        android:background="@drawable/selector_service_weeks"
                        android:padding="0dp"
                        android:text="@string/saturday_3"
                        android:textSize="@dimen/font_size_12" />
                </com.funnco.funnco.view.layout.HandyLinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/llayout_right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_service_servicename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="名字"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_item_service_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="描述"
                    android:textColor="@color/color_hint_gray_light"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="本月：99次"
                    android:textColor="@color/color_hint_gray_light"
                    android:textSize="12sp" />

            </LinearLayout>
        </RelativeLayout>
    </com.funnco.funnco.view.switcher.SwipeLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_black_4"/>
</LinearLayout>