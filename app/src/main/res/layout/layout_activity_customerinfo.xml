<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@id/llayout_head"
        layout="@layout/layout_activity_header_common" />

    <ViewFlipper
        android:id="@+id/vf_customer_vf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llayout_head">
        <!-- 第一个页面 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_main_bg">

            <LinearLayout
                android:id="@+id/llayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:padding="@dimen/dimen_common_10">

                <com.funnco.funnco.view.imageview.CircleImageView
                    android:id="@+id/civ_customerinfo_icon"
                    android:layout_width="@dimen/dimen_edit_height_65"
                    android:layout_height="@dimen/dimen_edit_height_65"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_customerinfo_truename"
                    style="@style/style_layout_width_height_mw"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:id="@+id/line_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/llayout_1"
                android:background="@color/color_black_4" />

            <LinearLayout
                android:id="@+id/llayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_top"
                android:background="@color/color_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_customerinfo_title_nickname"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/custuomer_beizhu"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/dimen_common_10"
                        android:text="@string/remark" />

                    <View
                        android:id="@+id/v_customerinfo_line_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_common_10"
                        android:layout_marginRight="@dimen/dimen_common_10"
                        android:background="@color/color_black_4" />

                    <TextView
                        android:id="@+id/tv_customerinfo_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_hint_gray"
                        android:layout_above="@id/v_customerinfo_line_nickname"
                        android:layout_toRightOf="@id/tv_customerinfo_title_nickname"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_customerinfo_title_tip"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/custuomer_tags"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/dimen_common_10"
                        android:text="标签" />

                    <View
                        android:id="@+id/v_customerinfo_line_tip"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_common_10"
                        android:layout_marginRight="@dimen/dimen_common_10"
                        android:background="@color/color_black_4" />

                    <TextView
                        android:id="@+id/tv_customerinfo_tip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_hint_gray"
                        android:layout_above="@id/v_customerinfo_line_tip"
                        android:layout_toRightOf="@id/tv_customerinfo_title_tip"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_customerinfo_title_birthday"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/custuomer_birthday"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/dimen_common_10"
                        android:text="@string/str_birthday" />

                    <View
                        android:id="@+id/v_customerinfo_line_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_common_10"
                        android:layout_marginRight="@dimen/dimen_common_10"
                        android:background="@color/color_black_4" />

                    <TextView
                        android:id="@+id/tv_customerinfo_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_hint_gray"
                        android:layout_above="@id/v_customerinfo_line_birthday"
                        android:layout_toRightOf="@id/tv_customerinfo_title_birthday"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_customerinfo_title_workphone"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/custuomer_phone"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/dimen_common_10"
                        android:text="@string/str_phone" />

                    <View
                        android:id="@+id/v_customerinfo_line_workphone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_common_10"
                        android:layout_marginRight="@dimen/dimen_common_10"
                        android:background="@color/color_black_4" />

                    <TextView
                        android:id="@+id/tv_customerinfo_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_hint_gray"
                        android:layout_above="@id/v_customerinfo_line_workphone"
                        android:layout_toRightOf="@id/tv_customerinfo_title_workphone"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/last_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_customerinfo_title_instroducation"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/custuomer_desc"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/dimen_common_10"
                        android:text="@string/str_personalinfo_3" />

                    <TextView
                        android:id="@+id/tv_customerinfo_remark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_hint_gray"
                        android:layout_toRightOf="@id/tv_customerinfo_title_instroducation"
                        android:maxLines="8"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/llayout_2"
                android:layout_above="@+id/tv_customerinfo_readmore"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_hint_gray"
                        android:text="总预约" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_hint_gray"
                        android:text="本月" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_hint_gray"
                        android:text="距上次服务" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/llayout_1"
                    android:background="@color/color_black_4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_customerinfo_conventation_all_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_gray"
                        android:text="0次"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_customerinfo_conventation_thismonth_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_gray"
                        android:text="0次"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_customerinfo_conventation_lastday_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_gray"
                        android:text="0次"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_customerinfo_readmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:drawableRight="@mipmap/common_dropdown_arrow"
                android:gravity="center"
                android:padding="@dimen/dimen_common_10"
                android:singleLine="true"
                android:text="更多"
                android:textSize="14sp" />

        </RelativeLayout>
        <!-- 第二个页面 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_main_bg">

            <LinearLayout
                android:id="@+id/llayout_conventationinfo_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_translucent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_common_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="共预约"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_customerinfo_conventation_all_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="0次"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="本月"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_customerinfo_conventation_thismonth_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="0次"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.funnco.funnco.view.listview.XListView
                android:id="@+id/xlv_customerinfo_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/llayout_conventationinfo_2"
                android:divider="@color/color_main_bg"
                android:dividerHeight="@dimen/dimen_common_10"
                android:listSelector="@color/color_main_bg"></com.funnco.funnco.view.listview.XListView>

            <ImageView
                android:id="@+id/iv_customerinfo_movetop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimen_common_10"
                android:padding="10dp"
                android:src="@mipmap/common_top"
                android:visibility="gone" />
        </RelativeLayout>
    </ViewFlipper>
</RelativeLayout>