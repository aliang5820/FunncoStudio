<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:background="@color/color_translucent">

    <RelativeLayout
        android:id="@+id/rl_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_dialog_bg">

        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/close_btn"/>

        <ImageView
            android:id="@+id/img_center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/close_dialog"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/pay_success_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="恭喜您开通成功"/>

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:textSize="13sp"
            android:background="@drawable/btn_radius_red_bg"
            android:textColor="@color/white"
            android:text="推荐给新用户,双方同时增加2个月当前版本使用权限"/>
    </RelativeLayout>
</RelativeLayout>