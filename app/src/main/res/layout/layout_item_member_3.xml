<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@id/tip"
        style="@style/style_layout_width_height_mw"
        android:gravity="center"
        android:padding="@dimen/dimen_common_5"
        android:textSize="@dimen/font_size_14"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_common_width_45"
        android:gravity="center_vertical"
        android:background="@color/color_white">
        <LinearLayout
            android:id="@id/id_linearlayout"
            style="@style/style_layout_width_height_ww"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@id/id_title_0"
                style="@style/style_common_tv_bar"
                android:layout_width="wrap_content"
                android:text="洗剪吹"
                android:padding="0dp"
                android:textColor="@color/color_black_3"
                android:textSize="@dimen/font_size_16"/>
            <TextView
                android:id="@id/id_title_1"
                style="@style/style_common_tv_bar"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_size_12"
                android:padding="0dp"
                android:textColor="@color/color_black_3"
                android:text="500元/耗时1.5小时"
                android:layout_below="@id/id_title_0"/>
        </LinearLayout>
        <ImageView
            android:id="@id/id_imageview"
            style="@style/style_layout_width_height_wm"
            android:src="@mipmap/common_enter_arrow_2x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_common_15"/>
        <TextView
            android:id="@id/id_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="周五 12:00-14:30"
            android:layout_marginRight="@dimen/dimen_common_10"
            android:visibility="gone"
            android:layout_toLeftOf="@id/id_imageview"/>
        <com.funnco.funnco.view.layout.HandyLinearLayout
            android:id="@id/id_layout_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/id_imageview">
            <CheckBox
                style="@style/style_common_cb"
                android:layout_width="@dimen/dimen_common_15"
                android:layout_height="@dimen/dimen_common_15"
                android:background="@drawable/selector_service_weeks"
                android:checked="false"
                android:textSize="@dimen/font_size_12"
                android:text="@string/sunday_3"/>
            <CheckBox
                style="@style/style_common_cb"
                android:layout_width="@dimen/dimen_common_15"
                android:layout_height="@dimen/dimen_common_15"
                android:background="@drawable/selector_service_weeks"
                android:checked="true"
                android:textSize="@dimen/font_size_12"
                android:text="@string/monday_3"/>
            <CheckBox
                style="@style/style_common_cb"
                android:layout_width="@dimen/dimen_common_15"
                android:layout_height="@dimen/dimen_common_15"
                android:background="@drawable/selector_service_weeks"
                android:checked="true"
                android:textSize="@dimen/font_size_12"
                android:text="@string/tuesday_3"/>
            <CheckBox
                style="@style/style_common_cb"
                android:layout_width="@dimen/dimen_common_15"
                android:layout_height="@dimen/dimen_common_15"
                android:background="@drawable/selector_service_weeks"
                android:checked="true"
                android:textSize="@dimen/font_size_12"
                android:text="@string/wednesday_3"/>
            <CheckBox
                style="@style/style_common_cb"
                android:layout_width="@dimen/dimen_common_15"
                android:layout_height="@dimen/dimen_common_15"
                android:background="@drawable/selector_service_weeks"
                android:textSize="@dimen/font_size_12"
                android:text="@string/thursday_3"/>
            <CheckBox
                style="@style/style_common_cb"
                android:layout_width="@dimen/dimen_common_15"
                android:layout_height="@dimen/dimen_common_15"
                android:background="@drawable/selector_service_weeks"
                android:textSize="@dimen/font_size_12"
                android:text="@string/friday_3"/>
            <CheckBox
                style="@style/style_common_cb"
                android:layout_width="@dimen/dimen_common_15"
                android:layout_height="@dimen/dimen_common_15"
                android:background="@drawable/selector_service_weeks"
                android:textSize="@dimen/font_size_12"
                android:text="@string/saturday_3"/>

        </com.funnco.funnco.view.layout.HandyLinearLayout>
    </RelativeLayout>
</LinearLayout>