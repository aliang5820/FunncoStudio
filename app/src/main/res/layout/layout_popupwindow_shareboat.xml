<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/id_layout_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_transparent">

    <LinearLayout
        android:id="@id/id_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/shape_pw_radius_4"
        android:orientation="vertical"
        android:padding="10dp">

        <ListView
            android:id="@id/id_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/color_main_bg"
            android:dividerHeight="@dimen/dimen_common_1"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@id/id_title_0"
                style="@style/style_common_rb"
                android:drawableTop="@mipmap/common_logo_wechat_2"
                android:textSize="14sp"
                android:drawablePadding="6dp"
                android:text="@string/str_wechat" />

            <TextView
                android:id="@id/id_title_1"
                style="@style/style_common_rb"
                android:drawableTop="@mipmap/common_logo_wechatmoment"
                android:textSize="14sp"
                android:drawablePadding="6dp"
                android:text="@string/str_wechat_moment" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cancle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:layout_marginTop="20dp"
            android:src="@mipmap/invite_cancel" />
    </LinearLayout>
</RelativeLayout>