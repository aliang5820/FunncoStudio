<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@id/llayout_head"
        layout="@layout/layout_activity_header_common"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/llayout_head"
        android:layout_above="@id/llayout_foot"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_updatepassword_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center_vertical"
            android:hint="输入原始密码"
            android:maxEms="20"
            android:maxLength="20"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:inputType="numberPassword"
            android:background="@drawable/shape_et_common"/>
        <EditText
            android:id="@+id/et_updatepassword_newpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center_vertical"
            android:hint="新密码"
            android:maxLength="20"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:inputType="numberPassword"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_et_common"/>
        <EditText
            android:id="@+id/et_updatepassword_newpwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="确认密码"
            android:maxLength="20"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:inputType="numberPassword"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_et_common"/>

    </LinearLayout>

    <include
        android:id="@id/llayout_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/layout_bottom_save"/>

</RelativeLayout>