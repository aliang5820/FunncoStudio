<?xml version="1.0" encoding="utf-8"?>
<com.funnco.funnco.view.layout.CheckableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_memberchoose_tip"
        style="@style/style_common_tv_bar"
        android:text="团队A"
        android:layout_marginLeft="0dp"
        android:paddingLeft="@dimen/dimen_common_30"
        android:visibility="gone"
        android:textColor="@color/color_white"
        android:background="@color/color_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_common_width_55">

        <com.funnco.funnco.view.imageview.CircleImageView
            android:id="@+id/civ_item_memberchoose_icon"
            android:layout_width="@dimen/dimen_common_width_45"
            android:layout_height="@dimen/dimen_common_width_45"
            android:layout_marginLeft="@dimen/dimen_common_15"
            android:layout_centerVertical="true" />

        <CheckBox
            android:id="@+id/cb_item_memberchoose"
            android:layout_width="45dp"
            android:layout_height="@dimen/dimen_common_width_55"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:focusable="false"
            android:button="@drawable/selector_repeadmode_circle"/>

        <TextView
            android:id="@+id/tv_item_memberchoose_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_toRightOf="@id/civ_item_memberchoose_icon"
            android:gravity="center"
            android:text="AAa"
            android:paddingLeft="@dimen/dimen_common_15"
            android:paddingRight="@dimen/dimen_common_15"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/color_hint_gray_light"
            android:textSize="14sp" />

        <View
            android:id="@id/id_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_common_1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_hint_gray_light" />

    </RelativeLayout>
</LinearLayout>
</com.funnco.funnco.view.layout.CheckableFrameLayout>