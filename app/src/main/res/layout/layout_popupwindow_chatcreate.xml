<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_team_invite"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:padding="@dimen/dimen_common_10">

    <TextView
        android:id="@id/id_title_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/common_personalinfo_career"
        android:gravity="center_vertical|right"
        android:padding="@dimen/dimen_common_10"
        android:text="@string/str_chat_create_single" />

    <TextView
        android:id="@id/id_title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/common_schedule_conventiontype_icon"
        android:gravity="center_vertical|right"
        android:padding="@dimen/dimen_common_10"
        android:text="@string/str_chat_create_group" />

    <TextView
        android:id="@id/id_title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/common_personalinfo_career"
        android:gravity="center_vertical|right"
        android:padding="@dimen/dimen_common_10"
        android:text="客户私聊" />
</LinearLayout>