<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_activity_header_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@id/id_layout_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:padding="@dimen/dimen_common_10">

                <com.funnco.funnco.view.imageview.CircleImageView
                    android:id="@+id/civ_personalinfo_icon"
                    android:layout_width="@dimen/dimen_edit_height_65"
                    android:layout_height="@dimen/dimen_edit_height_65"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_personalinfo_name"
                    style="@style/style_layout_width_height_mw"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/id_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_layout_0"
                android:layout_marginTop="@dimen/dimen_common_20"
                android:background="@color/color_white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_personalinfo_title_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/common_personalinfo_conventationcount"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_common_5"
                        android:text="@string/str_conventation_count" />

                    <View
                        android:id="@+id/v_personalinfo_line_count"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_common_10"
                        android:layout_marginRight="@dimen/dimen_common_10"
                        android:background="@color/color_black_4" />

                    <TextView
                        android:id="@+id/tv_personalinfo_conventationcount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/v_personalinfo_line_count"
                        android:layout_toRightOf="@id/tv_personalinfo_title_count"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_personalinfo_title_career"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/common_personalinfo_career"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_common_5"
                        android:text="@string/str_career_type" />

                    <View
                        android:id="@+id/v_personalinfo_line_career"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_common_10"
                        android:layout_marginRight="@dimen/dimen_common_10"
                        android:background="@color/color_black_4" />

                    <TextView
                        android:id="@+id/tv_personalinfo_career"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/v_personalinfo_line_career"
                        android:layout_toRightOf="@id/tv_personalinfo_title_career"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_personalinfo_title_workphone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/common_personalinfo_workphone"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_common_5"
                        android:text="@string/str_work_phone" />

                    <View
                        android:id="@+id/v_personalinfo_line_workphone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_common_10"
                        android:layout_marginRight="@dimen/dimen_common_10"
                        android:background="@color/color_black_4" />

                    <TextView
                        android:id="@+id/tv_personalinfo_workphone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/v_personalinfo_line_workphone"
                        android:layout_toRightOf="@id/tv_personalinfo_title_workphone"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/dimen_common_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_personalinfo_title_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/common_personalinfo_address"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_common_5"
                        android:text="@string/str_address" />

                    <View
                        android:id="@+id/v_personalinfo_line_address"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dimen_common_10"
                        android:layout_marginRight="@dimen/dimen_common_10"
                        android:background="@color/color_black_4" />

                    <TextView
                        android:id="@+id/tv_personalinfo_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/v_personalinfo_line_address"
                        android:layout_toRightOf="@id/tv_personalinfo_title_address"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_personalinfo_title_instroducation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/common_personalinfo_instroducation"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_common_5"
                        android:text="@string/str_personal_instroducation" />

                    <TextView
                        android:id="@+id/tv_personalinfo_instroducation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_personalinfo_title_instroducation"
                        android:padding="@dimen/dimen_common_5" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@id/id_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_layout_1"
                android:layout_marginTop="80dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_personalinfo_qrcode"
                    style="@style/style_radiobutton_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableTop="@mipmap/common_personalinfo_qrcode"
                    android:onClick="btnClick"
                    android:padding="@dimen/dimen_common_5"
                    android:text="@string/qr_code_2"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/tv_personalinfo_preface"
                    style="@style/style_radiobutton_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableTop="@mipmap/common_personalinfo_businesscard"
                    android:onClick="btnClick"
                    android:padding="@dimen/dimen_common_5"
                    android:text="@string/business_code"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>
            <!-- -->
            <LinearLayout
                android:id="@id/id_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_layout_1"
                android:layout_marginTop="80dp"
                android:background="@color/color_translucent"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="vertical">

                <Button
                    android:id="@id/id_title_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_team_member_joinmanager"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="@dimen/dimen_common_5"
                    android:textColor="@color/color_tangerine_2"
                    android:paddingLeft="@dimen/dimen_common_20"
                    android:paddingRight="@dimen/dimen_common_20"
                    android:background="@drawable/selector_common_stroke_tangerine"
                    android:onClick="btnClick"/>
                <Button
                    android:id="@id/id_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_team_member_joinmember"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="@dimen/dimen_common_5"
                    android:textColor="@color/color_tangerine_2"
                    android:paddingLeft="@dimen/dimen_common_20"
                    android:paddingRight="@dimen/dimen_common_20"
                    android:background="@drawable/selector_common_stroke_tangerine"
                    android:onClick="btnClick"/>
                <Button
                    android:id="@id/id_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_team_member_remove"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="@dimen/dimen_common_5"
                    android:textColor="@color/color_tangerine_2"
                    android:paddingLeft="@dimen/dimen_common_20"
                    android:paddingRight="@dimen/dimen_common_20"
                    android:background="@drawable/selector_common_stroke_tangerine"
                    android:onClick="btnClick"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>