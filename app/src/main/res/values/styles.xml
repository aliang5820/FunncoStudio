<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
      <!-- RadioButton无按钮样式 -->
    <style name="style_radiobuttn_nobutton">
        <item name="android:button">@null</item>
    </style>
    <!-- 白色 -->
    <style name="style_base">
        <item name="android:textColor">@color/color_white</item>
    </style>
    <!-- 橘红色-->
    <style name="style_base_tangerine">
        <item name="android:textColor">@color/color_hint_tangerine</item>
    </style>
    <!-- 白色+加粗-->
    <style name="style_base_bold" parent="style_base">
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 主页下RadioButton 样式-->
    <style name="style_radiobutton_horizontal" parent="style_radiobuttn_nobutton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_main_bottom_rb_unchecked</item>
    </style>

    <!-- 登录页面的FUNNCO字体样式：白色/加粗/-->
    <style name="style_login_funnco" parent="style_base_bold">
        <item name="android:textSize">@dimen/login_textsize_funnco</item>
    </style>

    <style name="style_login_et_inner">
        <item name="android:textColorHint">@color/color_hint_gray</item>
        <item name="android:textSize">@dimen/login_textsize_etinner</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@color/color_blue</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="style_login_et_inner_margin" parent="style_login_et_inner">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textCursorDrawable">@color/color_hint_tangerine</item>
    </style>

    <!-- 无选中按钮  字体白色-->
    <style name="style_nobutton_white" parent="style_radiobuttn_nobutton">
        <item name="android:textColor">@color/color_white</item>
    </style>
    <!-- 无选中那妞  字体14sp  灰色-->
<style name="style_nobutton_gray_14" parent="style_radiobuttn_nobutton">
    <item name="android:textSize">@dimen/login_textsize_phonenumber</item>
    <item name="android:textColor">@color/color_hint_gray_light</item>
    <item name="android:gravity">center</item>
</style>
    <!-- 无选中按钮  字体白色 字号18-->
    <style name="style_schedule_head" parent="style_nobutton_white">
        <item name="android:textSize">@dimen/dimen_header_textsize</item>
    </style>
    <!-- 白色字体 字号18-->
    <style name="style_base_white_18" parent="style_base">
        <item name="android:textSize">@dimen/dimen_header_textsize</item>
    </style>
    <!-- 白色字体 字号24-->
    <style name="style_base_white_24" parent="style_base">
        <item name="android:textSize">@dimen/dimen_header_textsize</item>
    </style>
    <!-- 橘黄色字体 字号12 -->
    <style name="style_base_tangerine_12" parent="style_base_tangerine">
        <item name="android:textSize">@dimen/login_textsize_phonenumber</item>
    </style>
    <!-- 橘黄色字体 字号18 -->
    <style name="style_base_tangerine_18" parent="style_base_tangerine">
        <item name="android:textSize">@dimen/dimen_header_textsize</item>
    </style>
    <!-- 橘黄色字体 字号18 背景透明-->
    <style name="style_button" parent="style_base_tangerine_18">
        <item name="android:background">@color/color_translucent</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />


    <style name="style_layout_width_w">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="style_layout_width_m">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="style_layout_height_w">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_layout_heigh_m">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_layout_width_height_ww" parent="style_layout_width_w">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_layout_width_height_mm" parent="style_layout_width_m">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="style_layout_width_height_wm" parent="style_layout_width_w">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="style_layout_width_height_mw" parent="style_layout_width_m">
